{
    "name": "huat",
    "description": "The HUAT project.",
    "author": "http://cipherpols.com",
    "license": "PRIVATE",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "mongodb/mongodb": "^1.0.0",
        "laravel/lumen-framework": "5.2.*",
        "vlucas/phpdotenv": "~2.2"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    }
}
